<?xml version="1.0" encoding="UTF-8"?>
<app name="DreamEye" version="0.1.0" icon="images/icon.png">
	<resources>
		<module src="../../modules/dreameye.klf" />
		<module src="modules/app_dreameye.klf" />
		<font src="../../fonts/ttf/arial_lite.ttf" type="ttf" size="14" name="arial" />
		<font src="../../fonts/ttf/comic_lite.ttf" type="ttf" size="22" name="comic" />
		<font src="../../fonts/ttf/m23.ttf" type="ttf" size="14" name="m23" />
		<surface height="45" name="header-bg">
			<fill color="#C9DADE" />
			<fill color="#BBBBBB" height="1" y="43" />
			<fill color="#CCCCCC" height="1" y="44" />
		</surface>
		<surface width="280" height="60" name="but-normal">
			<fill color="#FFFFFF" />
			<fill x="4" y="4" width="272" height="52" color="#BBBBBB" />
			<fill x="5" y="5" width="270" height="50" color="#31799F" />
		</surface>
		<surface width="280" height="60" name="but-hl">
			<fill color="#FFFFFF" />
			<fill x="4" y="4" width="272" height="52" color="#BBBBBB" />
			<fill x="5" y="5" width="270" height="50" color="#61BDEC" />
		</surface>
		<surface width="280" height="60" name="but-pressed">
			<fill color="#FFFFFF" />
			<fill x="4" y="4" width="272" height="52" color="#BBBBBB" />
			<fill x="5" y="5" width="270" height="50" color="#D4F129" />
		</surface>
		<surface width="280" height="60" name="but-disabled">
			<fill color="#FFFFFF" />
			<fill x="4" y="4" width="272" height="52" color="#BBBBBB" />
			<fill x="5" y="5" width="270" height="50" color="#CCCCCC" />
		</surface>
		<image src="../../gui/buttons/checkbox2/check.png" name="check-on" />
		<image src="../../gui/buttons/checkbox2/check_hl.png" name="check-on-hl" />
		<surface width="18" height="17" name="check-off">
			<fill color="#FFFFFF" />
		</surface>
		<theme>
			<input type="button" normal="but-normal" highlight="but-hl"
				pressed="but-pressed" disabled="but-disabled" />
			<input type="checkbox" onnormal="check-on" onhighlight="check-on-hl"
				offnormal="check-off" offhighlight="check-off-hl" />
		</theme>
	</resources>
	<body width="100%" height="100%" background="#DDDDDD"
		onload="export:DreamEyeApp_Init()"
		onunload="export:DreamEyeApp_Shutdown()"
		onopen="export:DreamEyeApp_Open()">
		<panel height="45" background="header-bg">
			<label font="comic" color="#666666" text="DreamEye Manager" />
		</panel>
		<cardstack name="pages">
			<panel name="main-page" y="30">
				<panel height="70" width="50%">
					<input type="button" width="280" height="60"
						onclick="export:DreamEyeApp_ShowPreview()" align="center" name="preview-320">
						<label font="m23" color="#ffffff" text="Preview 320x240" />
					</input>
				</panel>
				<panel height="70" width="50%">
					<input type="button" width="280" height="60"
						onclick="export:DreamEyeApp_ShowPreview()" align="center" name="preview-160">
						<label font="m23" color="#ffffff" text="Preview 160x120" />
					</input>
				</panel>
				<panel height="70" width="100%">
					<input type="button" width="280" height="60" onclick="console:app -o -n Main" align="center">
						<label font="m23" color="#ffffff" text="Exit" />
					</input>
				</panel>
			</panel>
		</cardstack>
	</body>
</app>
